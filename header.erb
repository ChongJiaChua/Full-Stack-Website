<html>

<head>
    <title> <%= @title %></title>
    <link rel="stylesheet" href="style/header.css">
</head>
<section id="header">
    <img src = "./images/pdplogo-nobg.png" alt="Logo of mountains for peak district prose" style="width:60px; height:60px; float:left;">
    <h1> Peak District Prose</h1>
    <br>
</section>

<nav class="navbar">
        <a href=".">Home</a>
        <a href="./genre">Browse</a>
        <a href="./settings">Settings</a>
        <a href="./contact">Contact</a>
        <a href="./poll">Polls</a>
        <a href="./createpoll">Create Poll</a>
        <a href="./competition">Competition</a>
        <% if session["logged_in"] == true %>
        <% @profile = session["user"] %>
        <% if @profile %>
          <% user = User.first(user_name: @profile) %>
          <a href="./payment">Popcorn: <%= user.popcorn %></a>
        <% end %>

        <div class="dropdown">
          <button class="dropbtn">Profile
          </button>
          <div class="dropdown-content">
            <a href="./profile">My Profile</a>
            <% if User.first(user_name:session["user"]).account_type == "admin" %>
            <a href="/adminDashboard">Dashboard</a>
            <% end %>
            <a href="./payment">Premium</a>
            <a href="./settings">Settings</a>

            <a href="./writing">Write a story</a>
            <form action="/logout" method="get">
              <input id ="logout_btn" type="submit" value="Logout">
            </form>
          </div>
          <% else %>
            <a href="./login" id="login_btn">Login</a>
          <% end %>

          </div>

        </div>
      </div>
</nav>



</html>


